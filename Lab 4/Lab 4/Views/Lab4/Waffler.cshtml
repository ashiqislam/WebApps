@using Microsoft.AspNetCore.Html;
@model List<HtmlString>


@{
    ViewData["Title"] = "Waffler";
}

<h2 class="bg-primary text-white" style="border-radius:7px;padding:7px">Generate Waffles</h2>

<a class="btn btn-success" asp-controller="Lab4" asp-action="Waffler" asp-route-id="1">1</a>
<a class="btn btn-success" asp-controller="Lab4" asp-action="Waffler" asp-route-id="2">2</a>
<a class="btn btn-success" asp-controller="Lab4" asp-action="Waffler" asp-route-id="3">3</a>
<a class="btn btn-success" asp-controller="Lab4" asp-action="Waffler" asp-route-id="4">4</a>
<a class="btn btn-success" asp-controller="Lab4" asp-action="Waffler" asp-route-id="5">5</a>


@if (@Model.Count != 0)
{
    @foreach (HtmlString item in @Model)
    {
        <div class="well" style="border-color:blue;background-color:rgb(228, 245, 252);font-size:small; margin-top:10px;margin-bottom:10px">
            @item
        </div>
    }
}


